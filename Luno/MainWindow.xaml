<Window x:Class="Luno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:editor="clr-namespace:Luno.Core.Editor"
        Title="Luno"
        Width="800" Height="600"
        MinWidth="400" MinHeight="300"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <!-- Chromeless Window with proper resize/drag support -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"
                      ResizeBorderThickness="6"
                      GlassFrameThickness="-1"
                      CornerRadius="8"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid x:Name="RootGrid">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="UiScaleTransform" ScaleX="1" ScaleY="1"/>
        </Grid.LayoutTransform>
        <!-- Noise Texture Overlay (紙の質感 - コードで動的生成) -->
        <Rectangle x:Name="NoiseOverlay"
                   IsHitTestVisible="False"
                   Opacity="1"/>

        <!-- Main Content Area -->
        <DockPanel Margin="0">
            <!-- Custom Title Bar -->
            <Grid DockPanel.Dock="Top" Height="40" x:Name="TitleBar">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="Luno"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           FontSize="12"
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextBrush}"/>

                <!-- Window Controls -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            VerticalAlignment="Top" HorizontalAlignment="Right">
                    <!-- Global Menu / Open File -->
                    <Button x:Name="OpenFileButton"
                            Content="&#xE8E5;"
                            Style="{StaticResource WindowControlButton}"
                            Click="OpenFileButton_Click"
                            ToolTip="ファイルを開く (Ctrl+O)" FontFamily="Segoe Fluent Icons"/>

                    <!-- Settings Button -->
                    <Button x:Name="SettingsButton"
                            Content="&#xE713;"
                            Style="{StaticResource WindowControlButton}"
                            Click="SettingsButton_Click"
                            ToolTip="設定"/>
                    
                    <Button x:Name="MinimizeButton"
                            Content="&#xE921;"
                            Style="{StaticResource WindowControlButton}"
                            Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton"
                            Content="&#xE922;"
                            Style="{StaticResource WindowControlButton}"
                            Click="MaximizeButton_Click"/>
                    <Button x:Name="CloseButton"
                            Content="&#xE8BB;"
                            Style="{StaticResource WindowCloseButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>

                <!-- New Tab Button -->
                <Button Grid.Column="1"
                        Content="&#xE710;"
                        Style="{StaticResource WindowControlButton}"
                        Width="32" Height="32"
                        Margin="4,4,0,0"
                        VerticalAlignment="Top"
                        Click="NewTabButton_Click"
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        ToolTip="新しいタブ (Ctrl+T)" FontFamily="Segoe Fluent Icons"/>
            </Grid>

            <!-- Status Bar -->
            <Border DockPanel.Dock="Bottom"
                    Height="24"
                    Margin="8,0,8,8"
                    CornerRadius="0,0,4,4"
                    Background="{DynamicResource EditorBackgroundBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Line, Column -->
                    <TextBlock Grid.Column="0"
                               x:Name="CursorPosText"
                               Text="行 1, 列 1"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontSize="11"
                               Opacity="0.7"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Character Count -->
                    <TextBlock Grid.Column="1"
                               x:Name="CharCountText"
                               Text="0 文字"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"
                               FontSize="11"
                               Opacity="0.6"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Spacer -->
                    <TextBlock Grid.Column="2"/>

                    <!-- Zoom Level -->
                    <TextBlock Grid.Column="3"
                               x:Name="ZoomLevelText"
                               Text="100%"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontSize="11"
                               Opacity="0.6"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Line Ending -->
                    <TextBlock Grid.Column="4"
                               Text="Windows (CRLF)"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontSize="11"
                               Opacity="0.5"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Encoding -->
                    <TextBlock Grid.Column="5"
                               Text="UTF-8"
                               VerticalAlignment="Center"
                               Margin="12,0,12,0"
                               FontSize="11"
                               Opacity="0.5"
                               Foreground="{DynamicResource TextBrush}"/>
                </Grid>
            </Border>

            <!-- Find Bar (Collapsed by default) -->
            <Border x:Name="FindBar"
                    DockPanel.Dock="Bottom"
                    Height="32"
                    Margin="8,0,8,0"
                    Visibility="Collapsed"
                    Background="{DynamicResource EditorBackgroundBrush}">
                <Grid Margin="8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Input -->
                    <TextBox x:Name="FindTextBox"
                             Grid.Column="0"
                             VerticalAlignment="Center"
                             Padding="8,4"
                             FontSize="12"
                             Background="Transparent"
                             BorderThickness="0,0,0,1"
                             BorderBrush="{DynamicResource TextBrush}"
                             Foreground="{DynamicResource TextBrush}"
                             CaretBrush="{DynamicResource TextBrush}"
                             TextChanged="FindTextBox_TextChanged"
                             KeyDown="FindTextBox_KeyDown"/>

                    <!-- Match Count -->
                    <TextBlock x:Name="FindMatchCount"
                               Grid.Column="1"
                               Text=""
                               VerticalAlignment="Center"
                               Margin="8,0"
                               FontSize="11"
                               Opacity="0.6"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Previous Match -->
                    <Button x:Name="FindPrevButton"
                            Grid.Column="2"
                            Content="&#xE70E;"
                            Style="{StaticResource WindowControlButton}"
                            Width="28" Height="24"
                            Click="FindPrevButton_Click"
                            ToolTip="前へ (Shift+Enter)"/>

                    <!-- Next Match -->
                    <Button x:Name="FindNextButton"
                            Grid.Column="3"
                            Content="&#xE70D;"
                            Style="{StaticResource WindowControlButton}"
                            Width="28" Height="24"
                            Click="FindNextButton_Click"
                            ToolTip="次へ (Enter)"/>

                    <!-- Close Find Bar -->
                    <Button x:Name="FindCloseButton"
                            Grid.Column="4"
                            Content="&#xE8BB;"
                            Style="{StaticResource WindowControlButton}"
                            Width="28" Height="24"
                            Click="FindCloseButton_Click"
                            ToolTip="閉じる (Esc)"/>
                </Grid>
            </Border>

            <!-- Editor Area with Tabs -->
            <Border x:Name="EditorContainer"
                    Margin="8,0,8,0"
                    CornerRadius="4,4,0,0"
                    Background="{DynamicResource EditorBackgroundBrush}">
                <TabControl x:Name="MainTabControl"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Margin="0,-32,0,0"
                            SelectionChanged="MainTabControl_SelectionChanged">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="12,6"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid>
                                            <Border x:Name="Border" 
                                                    CornerRadius="4,4,0,0" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <StackPanel Orientation="Horizontal" Margin="{TemplateBinding Padding}">
                                                    <TextBlock Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}" 
                                                               Foreground="{TemplateBinding Foreground}"
                                                               VerticalAlignment="Center"/>
                                                    <Button x:Name="CloseTabButton" 
                                                            Content="&#xE711;" 
                                                            FontFamily="Segoe Fluent Icons"
                                                            FontSize="10"
                                                            Width="16" Height="16"
                                                            Margin="8,0,-4,0"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Click="CloseTabButton_Click"
                                                            Visibility="Collapsed"
                                                            Foreground="{TemplateBinding Foreground}"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource EditorBackgroundBrush}"/>
                                                <Setter TargetName="CloseTabButton" Property="Visibility" Value="Visible"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="CloseTabButton" Property="Visibility" Value="Visible"/>
                                                <Setter TargetName="Border" Property="Background" Value="#20808080"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <!-- Tabs will be added in code-behind -->
                </TabControl>
            </Border>
        </DockPanel>
    </Grid>
</Window>
