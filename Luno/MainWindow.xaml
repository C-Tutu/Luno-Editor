<Window x:Class="Luno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:editor="clr-namespace:Luno.Core.Editor"
        Title="Luno"
        Width="800" Height="600"
        MinWidth="400" MinHeight="300"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <!-- Chromeless Window with proper resize/drag support -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="6"
                      GlassFrameThickness="-1"
                      CornerRadius="8"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid x:Name="RootGrid">
        <!-- Noise Texture Overlay (紙の質感 - コードで動的生成) -->
        <Rectangle x:Name="NoiseOverlay"
                   IsHitTestVisible="False"
                   Opacity="1"/>

        <!-- Main Content Area -->
        <DockPanel Margin="0">
            <!-- Custom Title Bar -->
            <Grid DockPanel.Dock="Top" Height="32" x:Name="TitleBar">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="Luno"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           FontSize="12"
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextBrush}"/>

                <!-- Window Controls -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                    <!-- Settings Button -->
                    <Button x:Name="SettingsButton"
                            Content="&#xE713;"
                            Style="{StaticResource WindowControlButton}"
                            Click="SettingsButton_Click"
                            ToolTip="設定"/>
                    
                    <Button x:Name="MinimizeButton"
                            Content="&#xE921;"
                            Style="{StaticResource WindowControlButton}"
                            Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton"
                            Content="&#xE922;"
                            Style="{StaticResource WindowControlButton}"
                            Click="MaximizeButton_Click"/>
                    <Button x:Name="CloseButton"
                            Content="&#xE8BB;"
                            Style="{StaticResource WindowCloseButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Status Bar -->
            <Border DockPanel.Dock="Bottom"
                    Height="24"
                    Margin="8,0,8,8"
                    CornerRadius="0,0,4,4"
                    Background="{DynamicResource EditorBackgroundBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Line, Column -->
                    <TextBlock Grid.Column="0"
                               x:Name="CursorPosText"
                               Text="行 1, 列 1"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontSize="11"
                               Opacity="0.7"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Character Count -->
                    <TextBlock Grid.Column="1"
                               x:Name="CharCountText"
                               Text="0 文字"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"
                               FontSize="11"
                               Opacity="0.6"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Spacer -->
                    <TextBlock Grid.Column="2"/>

                    <!-- Zoom Level -->
                    <TextBlock Grid.Column="3"
                               x:Name="ZoomLevelText"
                               Text="100%"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontSize="11"
                               Opacity="0.6"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Line Ending -->
                    <TextBlock Grid.Column="4"
                               Text="Windows (CRLF)"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontSize="11"
                               Opacity="0.5"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Encoding -->
                    <TextBlock Grid.Column="5"
                               Text="UTF-8"
                               VerticalAlignment="Center"
                               Margin="12,0,12,0"
                               FontSize="11"
                               Opacity="0.5"
                               Foreground="{DynamicResource TextBrush}"/>
                </Grid>
            </Border>

            <!-- Find Bar (Collapsed by default) -->
            <Border x:Name="FindBar"
                    DockPanel.Dock="Bottom"
                    Height="32"
                    Margin="8,0,8,0"
                    Visibility="Collapsed"
                    Background="{DynamicResource EditorBackgroundBrush}">
                <Grid Margin="8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Input -->
                    <TextBox x:Name="FindTextBox"
                             Grid.Column="0"
                             VerticalAlignment="Center"
                             Padding="8,4"
                             FontSize="12"
                             Background="Transparent"
                             BorderThickness="0,0,0,1"
                             BorderBrush="{DynamicResource TextBrush}"
                             Foreground="{DynamicResource TextBrush}"
                             CaretBrush="{DynamicResource TextBrush}"
                             TextChanged="FindTextBox_TextChanged"
                             KeyDown="FindTextBox_KeyDown"/>

                    <!-- Match Count -->
                    <TextBlock x:Name="FindMatchCount"
                               Grid.Column="1"
                               Text=""
                               VerticalAlignment="Center"
                               Margin="8,0"
                               FontSize="11"
                               Opacity="0.6"
                               Foreground="{DynamicResource TextBrush}"/>

                    <!-- Previous Match -->
                    <Button x:Name="FindPrevButton"
                            Grid.Column="2"
                            Content="&#xE70E;"
                            Style="{StaticResource WindowControlButton}"
                            Width="28" Height="24"
                            Click="FindPrevButton_Click"
                            ToolTip="前へ (Shift+Enter)"/>

                    <!-- Next Match -->
                    <Button x:Name="FindNextButton"
                            Grid.Column="3"
                            Content="&#xE70D;"
                            Style="{StaticResource WindowControlButton}"
                            Width="28" Height="24"
                            Click="FindNextButton_Click"
                            ToolTip="次へ (Enter)"/>

                    <!-- Close Find Bar -->
                    <Button x:Name="FindCloseButton"
                            Grid.Column="4"
                            Content="&#xE8BB;"
                            Style="{StaticResource WindowControlButton}"
                            Width="28" Height="24"
                            Click="FindCloseButton_Click"
                            ToolTip="閉じる (Esc)"/>
                </Grid>
            </Border>

            <!-- Editor Area -->
            <Border x:Name="EditorContainer"
                    Margin="8,0,8,0"
                    CornerRadius="4,4,0,0"
                    Background="{DynamicResource EditorBackgroundBrush}">
                <editor:LunoEditor x:Name="Editor"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
